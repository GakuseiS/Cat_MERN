model Card {
  id Int @id @default(autoincrement())
  title String
  img String
  size String
  taste String
  price Float
}

model Addon {
  id Int @id @default(autoincrement())
  title String
  size String
  price Float
}

model Program {
  id Int @id @default(autoincrement())
  name String
  weight Float
  age Int
  type String
  email String
  tel String
  comment String?
  addon_sugar String?
  addon_water String?
  addon_milk String?
  addon_vitamin String?
}

